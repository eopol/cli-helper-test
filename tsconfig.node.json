{
  "extends": "@unconfig/ts-config/node.esm.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
  },
  "include": [
    "**/build.config.ts",
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/tests/**",
    "node_modules",
    "**/dist",
    "**/*.md"
  ]
}
